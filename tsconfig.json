{
  "compilerOptions": {
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@prsima/*": ["prisma/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  }
}
